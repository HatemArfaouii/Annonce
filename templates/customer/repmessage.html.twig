{% extends 'base_front.html.twig' %}

{% block title %}listes des messages
{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumb-wrapper">
                        <h2 class="product-title"><i class="fa fa-list"></i> Mes messages</h2>
                        <ol class="breadcrumb">
                            <li><a href="#">Home /</a></li>
                            <li class="current"> Mes messages</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div id="content" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-4 col-lg-3 page-sidebar">
                    <aside>
                        <div class="sidebar-box">
                            <div class="user">
                                <figure>
                                    {% if app.user.filename != '' %}
                                        <a href="#"><img src="{{ asset('images/users/') }}{{ app.user.filename }}"
                                                         alt="" id="pp"></a>
                                        <div class="usercontent">
                                            <h3>{{ app.user.fullname }}</h3>
                                        </div>
                                    {% else %}
                                        <a href="#"><img src="{{ asset('img/avatars/male.png') }}" alt=""></a>
                                    {% endif %}
                                </figure>
                            </div>
                            <nav class="navdashboard">
                                <ul>
                                    <li>
                                        <a href="/front/customer/customerprofil">
                                            <i class="fa fa-list"></i>
                                            <span>Mes annonces</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('customer_settingprofile', {'id': app.user.id}) }}">
                                            <i class="fa fa-cog"></i>
                                            <span>Modifier profil</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/front/customer/posteannonce">
                                            <i class="fa fa-plus-circle"></i>
                                            <span>Ajoute annonce</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/logout">
                                            <i class="fa fa-lock"></i>
                                            <span>Logout</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </aside>
                </div>
                <div class="col-sm-12 col-md-8 col-lg-9">
                    <div class="page-content">
                        <div class="inner-box">
                            <div class="dashboard-box">
                                <h2 class="dashbord-title"><i class="fa fa-envelope-square"></i> Mes messages</h2>
                            </div>
                            <div id="comments">
                                <div class="comment-box">
                                    <ol class="comments-list">
                                        <li>
                                            {% for message in messages %}
                                                <div class="media">
                                                    <div class="thumb-left">
                                                        <a href="#">
                                                            <img class="img-fluid" style="width: 100px; height: 100px" src="{{ asset('images/users/') }}{{ message.userid.filename }}"
                                                                 alt="">
                                                        </a>
                                                    </div>
                                                    <div class="info-body">
                                                        <div class="media-heading">
                                                            <h4 class="name">{{ message.userid.fullname }}</h4>
                                                            <span class="comment-date"><i class="fa fa-clock"></i> {{ message.dateadd |date("m/d/Y")  }}</span>
                                                            <a href="{{ path('customer_msg', {'id': message.id}) }}" class="reply-link"><i class="fa fa-reply"></i> Repondre</a>
                                                        </div>
                                                        <p>{{ message.content }}</p>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </li>
                                    </ol>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>

{% endblock %}