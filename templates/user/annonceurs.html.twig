{% extends 'base.html.twig' %}

{% block title %}Liste utilisateurs{% endblock %}

{% block body %}

<div class="row">
    <div class="col-sm-12">
        <ul class="demo-btns pull-left">
            <li>
                <h1><i class="glyphicon glyphicon-list"></i> Liste des annonceurs</h1>
            </li>
            &nbsp;&nbsp;
            {# <li>
        </li>#}
        </ul>
    </div>
</div>
<!-- widget grid -->
<section id="widget-grid" class="">
    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                <header>
                    <div class="widget-toolbar" role="menu">

                    </div>
                </header>
                <div>
                    <div class="jarviswidget-editbox">
                    </div>
                    <div class="widget-body no-padding">
                        <div style="overflow-x:auto;">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover"
                                   width="100%">
                                <thead>
                                <tr style="background: #2D6E9D ; color: #fff; ">
                                    <th>Actions</th>
                                    <th>Profil</th>
                                    <th>Nom & Pr√©nom</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for annonceur in annonceurs %}
                                <tr>
                                    <td class="text-align-center" style='width: 8%;'>
                                        <button class=" btn btn-danger btn-xs glyphicon glyphicon-trash deleteuser" data-id="{{ annonceur.id }}" ></button>
                                        <div class="btn btn-xs btn-primary">
                                            <a href="{{ path('user_annonceur_edit', {'id': annonceur.id}) }}"
                                               style="color: #fff;">
                                                <span class="fa fa-lg fa-edit"></span>
                                            </a>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="circle" style="width: 25px; height: 25px">
                                            {% if annonceur.filename != '' %}
                                            <img class="profile-pic"
                                                 src="{{ asset('/images/users/') }}{{annonceur.filename}} "
                                                 style=" width: 100%;height: 100%;">
                                            {% else %}
                                            <img class="profile-pic"
                                                 src="{{ asset('img/avatars/male.png') }}"
                                                 style=" width: 100%;height: 100%;">
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td><font style="text-transform: uppercase;">{{ annonceur.fullName }}</td>
                                    <td>{{ annonceur.username }}</td>
                                    <td>{{ annonceur.email }}</td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            {#                            </div>#}
                    </div>
                </div>
            </div>
    </div>
    </article>
    </div>
</section>

{% endblock %}
