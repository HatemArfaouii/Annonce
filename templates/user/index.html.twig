{% extends 'base.html.twig' %}

{% block title %}Gestion utilisateurs{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-12">
            <ul class="demo-btns pull-left">
                <li>
                    <h1><i class="glyphicon glyphicon-list"></i> Liste des Administrateurs</h1>
                </li>
            </ul>
        </div>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <div class="widget-toolbar" role="menu">
                            <div class="label label-primary">
                                <a href="{{ path('user_new') }}" style="color: #fff;">
                                    <i class="glyphicon glyphicon-plus"></i> Créer un administrateur
                                </a>
                            </div>
                        </div>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <div style="overflow-x:auto;">
                                <table id="dt_basic" class="table table-striped table-bordered table-hover"
                                       width="100%">
                                    <thead>
                                    <tr style="background: #2D6E9D ; color: #fff; ">
                                        <th>Actions</th>
{#                                        <th>Statut</th>#}
                                        <th>Photo profil</th>
                                        <th>Nom & Prénom</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td class="text-align-center" style='width: 8%;'>
                                                <button class=" btn btn-danger btn-xs glyphicon glyphicon-trash deleteuser" data-id="{{ user.id }}" ></button>
                                                <div class="btn btn-xs btn-primary">
                                                    <a href="{{ path('user_edit', {'id': user.id}) }}"
                                                       style="color: #fff;">
                                                        <span class="fa fa-lg fa-edit"></span>
                                                    </a>
                                                </div>
                                            </td>
 
                                            <td>
                                            <div class="circle" style="width: 25px; height: 25px">
                                            {% if user.filename != '' %}
                                              <img class="profile-pic"
                                                     src="{{ asset('/images/users/') }}{{user.filename}} "
                                                     style=" width: 100%;height: 100%;">
                                            {% else %}
                                                <img class="profile-pic"
                                                     src="{{ asset('img/avatars/male.png') }}"
                                                     style=" width: 100%;height: 100%;">
                                            {% endif %}
                                            </div>
                                        </td>
                                            <td><font style="text-transform: uppercase;">{{ user.fullName }}</td>
                                            <td>{{ user.username }}</td>
                                            <td>{{ user.email }}</td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                {#                            </div>#}
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>

    <!-- Modal  status user -->

    <div aria-hidden="true" aria-labelledby="exampleModalLabel" class="modal fade" id="modal_valid_user" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-header" style="background-color: whitesmoke;">
                    <button class="close " data-dismiss="modal" style="color: red;" type="button">&times;</button>
                    <h5 class="modal-title" id="exampleModalLabel">
                        <i class="fa fa-lg fa-bullhorn" style="color:#89AD45"></i> Bloquer user</h5>
                </div>
                <div class="modal-body">
                    <div class="widget-body no-padding" style="text-align: center;">
                        <fieldset>
                            <h5>
                                Cliquer sur #Bloquer  pour bloquer utilisateur.
                            </h5>
                        </fieldset>
                    </div>
                </div>
                <div class="modal-footer" style="background-color: whitesmoke;">
                    <span class="badge bg-color-redLight inbox-badge valid_statut_user statut_user" data-field="statut" data-id="2">
                        <i class="fa fa-times-circle"></i>
                        Bloquer
                    </span>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
