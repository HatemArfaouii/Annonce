<section id="content" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-xs-12">
                {{ form_start(our_form,{attr: {class: 'smart-form login-form', id:'order-form' }}) }}
                <h2 class="contact-title">
                    Envoyer message
                </h2>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    {{ form_row(our_form.name ,{'attr':{'placeholder':'name', 'name':'name', 'class':'form-control', 'id':'name', 'required data-error':'Please enter your name'} } ) }}
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    {{ form_row(our_form.email ,{'attr':{'placeholder':'Email', 'name':'email', 'class':'form-control', 'id':'email', 'required data-error':'Please enter your email'} } ) }}
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    {{ form_row(our_form.subject ,{'attr':{'placeholder':'Subject', 'name':'Subject', 'class':'form-control', 'id':'msg_subject', 'required data-error':'Please enter your subject'} } ) }}
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_row(our_form.message ,{'attr':{'placeholder':'message','rows':'7','data-error':'Write your message','class':'form-control'}} ) }}
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" id="submit" class="btn btn-common">Envoyer</button>
                    </div>
                </div>
            </div>
            {{ form_end(our_form) }}
