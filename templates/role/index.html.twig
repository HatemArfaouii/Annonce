{% extends 'base.html.twig' %}

{% block title %}Role index
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <ul class="demo-btns pull-left">
                <li>
                    <h1>
                        <i class="fa fa-lg  fa-list fa-2x" style="color: #DA8028"></i>
                        &nbsp;&nbsp; Liste des roles
                    </h1>
                </li>
                &nbsp;&nbsp;
                <li>
                    <a href="{{ path('role_new') }}" class="btn btn-primary btn-circle btn-sm" title="Ajoute">
                        <i class="glyphicon glyphicon-plus"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <!-- widget grid -->
    <section class="" id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" data-widget-editbutton="false" id="wid-id-0">
                    <header class="text-align-right">
                        {#<div class="widget-toolbar" role="menu">
                                                                        <div class="label label-primary">
                                                                            <a href="#" style="color: #fff;" >
                                                                                <i class="fa fa-file-pdf-o"></i> Générer un PDF
                                                                            </a>
                                                                        </div>
                                                                    </div>#}
                        {# <div class="widget-toolbar" role="menu">
                                                                        <div class="label label-primary">
                                                                            <a href="#" style="color: #fff;">
                                                                                <i class="fa fa-file-excel-o"></i> Télechargement Excel
                                                                            </a>
                                                                        </div>
                                                                    </div> #}
                        {# <div class="widget-toolbar" role="menu">
                                                                        <div class="label label-primary">
                                                                            <a href="{{ path('employe_new') }}" style="color: #fff;">
                                                                                <i class="glyphicon glyphicon-plus"></i> Créer un employé
                                                                            </a>
                                                                        </div>
                                                                    </div> #}
                            <span class="widget-icon"> <i class="fa fa-list"></i>
                        </span>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body no-padding">
                            <div style="overflow-x:auto;">
                                <table class="table table-striped table-bordered table-hover" id="dt_basic" width="100%">
                                    <thead>
                                        <tr style="background: #2D6E9D  ; color: #fff; ">
                                            <th>Id</th>
                                            <th>Role name</th>
                                            <th>Role code</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for role in roles %}
                                            <tr>
                                                <td>{{ role.id }}</td>
                                                <td><font style="text-transform: uppercase;">{{ role.rolename }}</td>
                                                <td>{{ role.rolecode }}</td>
                                                <td>
                                                    <button class=" btn btn-danger btn-xs glyphicon glyphicon-trash deleterole" data-id="{{ role.id }}"></button>
                                                    <div class="btn btn-xs btn-primary">
                                                        <a href="{{ path('role_edit', {'id': role.id}) }}" style="color: #fff;">
                                                            <span class="fa fa-lg fa-edit"></span>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="4">no records found</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
{% endblock %}